<div class="container d-flex justify-content-center">
  <div class="col-md-8">
    <h1 class="text-center mb-4">üìä Relat√≥rio de Pedidos</h1>

    <div class="d-flex justify-content-between mb-3">
      <!-- Verifica se o usu√°rio √© admin -->
      <% if current_user.is_admin? %>
        <%= link_to 'üì• Exportar Relat√≥rio', export_documents_path(format: :xlsx), class: 'btn btn-success' %>
      <% end %>
      <%= link_to 'üîô Voltar', root_path, class: 'btn btn-secondary' %>
    </div>

    <!-- üîç Filtros -->
    <div class="card shadow-sm p-4 mb-4">
      <h5 class="text-center mb-3">üîç Filtrar Pedidos</h5>
      <%= form_with url: reports_path, method: :get, class: "row g-3 justify-content-center" do %>
        <div class="col-md-5">
          <%= label_tag :status, "Status", class: "form-label" %>
          <%= select_tag :status, options_for_select(@status_options, params[:status]), class: "form-select" %>
        </div>
        <div class="col-md-5">
          <%= label_tag :user_id, "Usu√°rio", class: "form-label" %>
          <%= select_tag :user_id, options_for_select(@user_options, params[:user_id]), class: "form-select" %>
        </div>
        <div class="col-md-10 text-center">
          <%= submit_tag "Filtrar", class: "btn btn-primary me-2" %>
          <%= link_to '‚ùå Limpar Filtros', reports_path, class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
    </div>

    <!-- üìã Tabela de Relat√≥rio -->
    <% if @orders.empty? %>
      <div class="alert alert-warning text-center">‚ö†Ô∏è N√£o h√° pedidos registrados.</div>
    <% else %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
          <thead class="table-dark">
            <tr>
              <th style="width: 10%;">#ID</th>
              <th style="width: 25%;">Usu√°rio</th>
              <th style="width: 15%;">Status</th>
              <th style="width: 20%;">Total</th>
              <th style="width: 30%;">Data da Compra</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |report| %>
              <tr>
                <td><strong><%= report[:order].id %></strong></td>
                <td><%= report[:order].user&.name || "Usu√°rio desconhecido" %></td>
                <td>
                  <span class="badge <%= report[:order].status == 'done' ? 'bg-success' : 'bg-warning' %>">
                    <%= report[:order].status.capitalize %>
                  </span>
                </td>
                <td><strong><%= number_to_currency(report[:order].total) %></strong></td>
                <td><%= report[:order].created_at.strftime("%d/%m/%Y %H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
